rules_version = '2';

// Craft files@link https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Images uploads - users can upload to their own folder
    match /users/{userId}/images/{imageId} {
      allow read: if true; // Anyone can read images
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        imageId.matches('.*\\.(jpg|jpeg|png|gif|webp)$') &&
        request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Project files - only project creator can upload
    match /projects/{projectId}/files/{fileName} {
      allow read: if true; // Anyone can read project files
      allow write: if request.auth != null &&
        // Note: You'll need to verify projectId ownership in your app logic
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
    }

    // Artwork uploads - users can upload to their own folder
    match /artworks/{userId}/images/{imageId} {
      allow read: if true; // Anyone can read artwork images
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        imageId.matches('.*\\.(jpg|jpeg|png|gif|webp)$') &&
        request.resource.size < 20 * 1024 * 1024; // 20MB limit for artwork
    }

    // Profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        fileName.matches('.*\\.(jpg|jpeg|png|gif|webp)$') &&
        request.resource.size < 5 * 1024 * 1024; // 5MB limit for profile pics
    }

    // Temporary uploads folder (auto-delete after 24 hours)
    match /temp/{userId}/{fileName} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 100 * 1024 * 1024; // 100MB limit for temp files
    }
  }
}